@model EduSite.Models.Course

@{
    ViewData["Title"] = "Confirm Enrollment";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">Confirm Course Enrollment</h2>
                    
                    <div class="alert alert-info">
                        <h4>@Model.Title</h4>
                        <p class="mb-0">Price: $@Model.Price.ToString("0.00")</p>
                    </div>

                    <p class="mb-4">Are you sure you want to enroll in this course?</p>

                    <div class="d-flex justify-content-center gap-3">
                        <form asp-action="ConfirmEnrollment" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="confirm" value="true" />
                            <button type="submit" class="btn btn-primary">Confirm Purchase</button>
                        </form>

                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
